    >
    <TextView
        android:id="@+id/tv_title"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_conent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>